    <style name="Theme.Aiapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:actionBarStyle">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/nunitosanslight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_500</item>
        <item name="colorSecondaryVariant">@color/brown_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/gray</item>

        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/gray</item>
